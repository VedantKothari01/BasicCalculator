<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BasicCalculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/startGradientColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/endGradientColor</item>
        <item name="colorSecondaryVariant">@color/endGradientColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Customize your light theme here. -->
    </style>

    <style name="Theme.BasicCalculator" parent="Base.Theme.BasicCalculator" />

    <!-- Splash screen theme -->
    <style name="Theme.BasicCalculator.Splash" parent="Base.Theme.BasicCalculator">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>
